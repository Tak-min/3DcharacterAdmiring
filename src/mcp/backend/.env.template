# Environment Variables Configuration for 3D Character Admiring App (MCP Phase)
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./character_admiring.db

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # Use App Password for Gmail
FROM_EMAIL=your-email@gmail.com
FROM_NAME=3D Character Admiring

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# Application Configuration
DEVELOPMENT_MODE=true  # Set to false in production
DEBUG=true
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080,http://localhost:5500,http://127.0.0.1:5500

# Rate Limiting (future use)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload (future use)
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# Cache Configuration (future use)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Monitoring (future use)
ENABLE_METRICS=false
METRICS_PORT=9090

# 3D Model Configuration (future phases)
VRM_MODELS_DIRECTORY=./assets/vrm_models
MAX_MODEL_SIZE_MB=50

# Voice API Configuration (Phase 2)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=default-voice-id
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# WebSocket Configuration (future phases)
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Logging Configuration
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE_MB=10
LOG_RETENTION_DAYS=30

# Performance Configuration
MAX_WORKERS=4
KEEP_ALIVE_TIMEOUT=5
REQUEST_TIMEOUT=30

# Development Tools
ENABLE_DOCS=true  # Set to false in production
ENABLE_REDOC=true  # Set to false in production
RELOAD_ON_CHANGE=true  # Set to false in production
